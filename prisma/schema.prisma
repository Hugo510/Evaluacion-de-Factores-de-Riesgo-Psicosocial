// prisma/schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int         @id @default(autoincrement())
  name        String
  email       String      @unique
  password    String
  role        Role        @default(WORKER)
  department  String?
  responses   Response[]
}

enum Role {
  ADMIN
  WORKER
}

model Questionnaire {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  questions   Question[]
  responses   Response[]
}

model Question {
  id              Int           @id @default(autoincrement())
  text            String
  category        String        // Por ejemplo, "cargas de trabajo", "liderazgo negativo", etc.
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
  questionnaireId Int
}

model Response {
  id              Int           @id @default(autoincrement())
  user            User          @relation(fields: [userId], references: [id])
  userId          Int
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
  questionnaireId Int
  answers         Json          // Se almacenar√°n las respuestas en formato JSON
  riskLevel       RiskLevel
  createdAt       DateTime      @default(now())
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}
